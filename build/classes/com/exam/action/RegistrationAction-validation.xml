<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC 
  		"-//Apache Struts//XWork Validator 1.0.2//EN"
  		"http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">

<validators>

	<field name="name">
		<field-validator type="requiredstring">
			<message>Name can't be blank.</message>
		</field-validator>
	</field>
	
	<field name="surname">
		<field-validator type="requiredstring">
			<message>Surname can't be blank.</message>
		</field-validator>
	</field>

	<field name="dob">
		<field-validator type="requiredstring">
			<message>Dob can't be blank.</message>
		</field-validator>
	</field>
	
	<field name="address">
		<field-validator type="requiredstring">
			<message>Address can't be blank.</message>
		</field-validator>
	</field>
	
	<field name="email">
		<field-validator type="requiredstring">
			<message>Email ID can't be blank.</message>
		</field-validator>
<!-- 		<field-validator type="email">
			<message>Please enter a valid email ID</message>
		</field-validator> -->
	</field>

	<field name="password">
		<field-validator type="requiredstring">
			<message>Password can't be blank.</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">4</param>
			<param name="maxLength">10</param>
			<message>Password can't be less than 4 or greater than 10.</message>
		</field-validator>
	</field>
	
	<field name="phone">
		<field-validator type="requiredstring">
			<message>Phone no. can't be blank.</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">10</param>
			<param name="maxLength">10</param>
			<message>Phone no. can't be less10.</message>
		</field-validator>
		</field>
		
		<field name="zip">
		<field-validator type="requiredstring">
			<message>Zip can't be blank.</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">6</param>
			<param name="maxLength">6</param>
			<message>Zip can't be less than 6 digits.</message>
		</field-validator>
		</field>
		
	
</validators>  